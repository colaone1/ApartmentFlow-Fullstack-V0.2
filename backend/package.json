{
  "name": "apartment-flow-backend",
  "version": "1.0.0",
  "description": "Backend API for Apartment Flow application",
  "main": "src/app.js",
  "license": "Apache-2.0",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "dev:force": "kill-port 3001 && nodemon src/app.js",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "prepare": "husky install",
    "performance:test": "cross-env NODE_ENV=test jest --testPathPattern=performance",
    "performance:monitor": "node scripts/performance-monitor.js",
    "cache:stats": "node scripts/cache-stats.js",
    "db:optimize": "node mongodb-optimize.js",
    "memory:profile": "node --inspect src/app.js",
    "load:test": "artillery run scripts/load-test.yml"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix --ignore-path .eslintignore",
      "prettier --write --ignore-path .prettierignore"
    ],
    "!mongodb-optimize.js": "echo 'Skipping mongodb-optimize.js'",
    "!**/mongodb-optimize.js": "echo 'Skipping mongodb-optimize.js'"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "cheerio": "^1.1.0",
    "cloudinary": "^2.7.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.0",
    "express-session": "^1.18.1",
    "express-validator": "^7.2.1",
    "helmet": "^6.0.1",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.3",
    "morgan": "^1.10.0",
    "multer": "^2.0.1",
    "node-cache": "^5.1.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "artillery": "^2.0.23",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "kill-port": "^2.0.1",
    "lint-staged": "^16.1.2",
    "mongodb-memory-server": "^10.1.4",
    "nodemon": "^3.1.10",
    "prettier": "^2.8.7",
    "supertest": "^7.1.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
