{
  "env": {
    "node": true,
    "es2021": true,
    "jest": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "no-unused-vars": "off"
  },
  "overrides": [
    {
      "files": ["**/__tests__/**/*.js", "**/*.test.js"],
      "env": {
        "jest": true
      }
    }
  ]
} 